<div class="text-center mb-3 border-bottom">
  <h1>お気に入りツイートを保存</h1>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @favorite_tweet, url: folder_favorite_tweets_path) do |f| %>
      <div class="mb-3">
        <%= f.label :tweet, 'ツイートの埋め込み用HTML' %>
        <%= f.text_field :tweet, class: 'form-control' %>
      </div>
      
      <div>
        <%= f.submit '追加', class: 'btn btn-primary w-100' %>
      </div>
    <% end %>
  </div>
</div>
