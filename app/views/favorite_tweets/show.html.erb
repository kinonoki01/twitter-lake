<div class="text-center mb-3 border-bottom">
  <h1>お気に入りツイート</h1>
</div>
<div class="text-center">
  <h4>フォルダ名：<%= @folder.name %></h4>
  <div class="row">
    <div class=" col-sm-6 offset-sm-3">
      <%= @favorite_tweet.tweet.html_safe %>
    </div>
  </div>
  <div class="row">
    <%= link_to '編集', edit_folder_favorite_tweet_path(@folder, @favorite_tweet), class: 'btn btn-primary col-sm-3 offset-2' %>
    <%= link_to '削除', folder_favorite_tweet_path(@folder, @favorite_tweet), method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger col-sm-3 offset-2' %>
  </div>
</div>